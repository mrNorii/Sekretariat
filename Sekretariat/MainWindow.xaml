                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Imie"/>
                            <TextBox Grid.Column="1" Name="imieU"/>
                        </Grid>
                        <!-- Drugie Imie -->
                        <Grid>
                            <Grid.ColumnDefinitions>
