                        </Grid>
                        <!-- Wczytywanie Zdjęcia -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Zdjęcie"/>
                            <Button Grid.Column="1" Click="wczytajZdjecieN">Wczytaj Zdjecie</Button>
                        </Grid>
